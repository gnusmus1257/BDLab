@model WebApplication4.Models.TableViewModel.VisitCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
List service : 
<ul>
        @foreach (var item in Model.Services)
        {
            <li>
                @item.name
            </li>
    }
</ul>
List visitor :
<ul>
    @foreach (var item in Model.Visitors)
    {
        <li>
            @item.FIO
        </li>
    }
</ul>
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Visits</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" name="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Master" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Master" class="form-control" />
                <span asp-validation-for="Master" class="text-danger"></span>
            </div>
        </div>
        <select name="Service">
            <option  selected="selected">Services</option>
            @foreach (var item in Model.Services)
            {
                <option>
                    @item.name
                </option>
            }
        </select>
        <select name="Visitor" class="list-group">
            <option selected="selected">Visitors</option>
            @foreach (var item in Model.Visitors)
            {
                <option class="list-group-item">
                    @item.FIO
                </option>
            }
        </select>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

