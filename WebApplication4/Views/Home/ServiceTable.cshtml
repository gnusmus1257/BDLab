@model IEnumerable<WebApplication4.Models.Service>

@{
    ViewData["Title"] = "ServiceTable";
}

<h2>ServiceTable</h2>

<p>
    <a asp-action="CreateService">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.name
            </td>
            <td>
                @item.description
            </td>
            <td>
                @item.value
            </td>
            @*<td>
                @item.Photo
            </td>*@
            <td>
                <a asp-action="DeleteService" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}

    </tbody>
</table>
